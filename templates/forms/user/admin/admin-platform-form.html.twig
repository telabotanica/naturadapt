{{ form_start(form) }}
<div class="form-rows">
	<h2 class="h2">{{ 'forms.administration.platform.name'|trans }}</h2>
	<p class="hint">{{ 'forms.administration.platform.introduction'|trans }}</p>

	<p class="element_title">{{ 'forms.administration.platform.logo.name'|trans }}</p>


	<div class="form-row form-row__file">
		<div class="file-preview">
			<div class="file-preview--img">
				<img class="logo-img" src="{{ asset('media/layout/logo.png') }}" >
			</div>
			<div class="file-preview--content">
				{{ form_label(form.logofile, 'forms.administration.platform.logo.label') }}
				<div class="hint">{{ 'forms.administration.platform.logo.hint'|trans|format(form.logofile.vars.attr['data-max-size']) }}</div>
				{{ form_widget(form.logofile) }}
				{{ form_label(form.logofile, 'forms.administration.platform.logo.button', {'label_attr': {'class': 'submit-style submit-style__inverted'}}) }}
				<div class="form_errors">{{ form_errors(form.logofile) }}</div>
			</div>
		</div>
	</div>
</div>
<div class="form-row form-row__submit">
	{{ form_widget(form.submit, {'label': 'forms.administration.submit'|trans}) }}
</div>
{{ form_end(form) }}
