{% extends 'base.html.twig' %}

{% block body %}
	<div class="user-page user-page__profile-create">
		<div class="user-page--header main-presentation">
			<div class="content-container narrow">
				{% include 'components/app-flashes.html.twig' %}
			</div>
		</div>
		<div class="user-page--content content-container">
			<section class="profile-form narrow">
				<h1 class="h3">{{ 'pages.user.profile_create.title'|trans }}</h1>
				<p>{{ 'pages.user.profile_create.introduction'|trans }}</p>

				{{ form_start(form) }}
				<div class="form-row__mandatory">{{ 'forms.mandatory'|trans }}</div>
				<div class="form-rows">
					<div class="form-row form-row__field">
						{{ form_label(form.name, 'forms.name.label') }}
						{{ form_widget(form.name, {'attr': {'placeholder': 'forms.name.placeholder'}}) }}
					</div>
					<div class="form-row form-row__field">
						{{ form_label(form.displayname, 'forms.display_name.label') }}
						{{ form_widget(form.displayname, {'attr': {'placeholder': 'forms.display_name.placeholder'}}) }}
					</div>
					<div class="form-row form-row__file">
						{{ form_label(form.avatarfile, 'forms.avatar.label') }}
						<div class="hint">{{ 'forms.avatar.hint'|trans }}</div>
						{{ form_widget(form.avatarfile) }}
						{{ form_label(form.avatarfile, 'forms.avatar.button', {'label_attr': {'class': 'submit-style'}}) }}
					</div>
					<div class="columns-66-33">
						<div class="form-row form-row__field">
							{{ form_label(form.city, 'forms.city.label') }}
							{{ form_widget(form.city, {'attr': {'placeholder': 'forms.city.placeholder'}}) }}
						</div>
						<div class="form-row form-row__field">
							{{ form_label(form.zipcode, 'forms.zipcode.label') }}
							{{ form_widget(form.zipcode, {'attr': {'placeholder': 'forms.zipcode.placeholder'}}) }}
						</div>
					</div>
					<div class="form-row form-row__field">
						{{ form_label(form.country, 'forms.country.label') }}
						{{ form_widget(form.country, {'attr': {'placeholder': 'forms.country.placeholder'}}) }}
					</div>
					<div class="form-row form-row__field">
						{{ form_label(form.presentation, 'forms.presentation.label') }}
						<div class="hint">{{ 'forms.presentation.hint'|trans }}</div>
						{{ form_widget(form.presentation, {'attr': {'placeholder': 'forms.presentation.placeholder'}}) }}
					</div>
					<div class="form-row form-row__field">
						{{ form_label(form.bio, 'forms.bio.label') }}
						<div class="hint">{{ 'forms.bio.hint'|trans }}</div>
						{{ form_widget(form.bio, {'attr': {'placeholder': 'forms.bio.placeholder'}}) }}
					</div>
					<div class="form-row form-row__field">
						{{ form_label(form.inscriptionType, 'forms.inscription_type.label') }}
						<div class="form-row__radioboxes">
							{{ form_widget(form.inscriptionType) }}
						</div>
					</div>
					<div class="form-row form-row__field">
						{{ form_label(form.site, 'forms.site.label') }}
						<div class="hint">{{ 'forms.site.hint'|trans }}</div>
						{{ form_widget(form.site, {'attr': {'placeholder': 'forms.site.placeholder'}}) }}
					</div>
				</div>
				<div class="form-row form-row__submit">
					{{ form_widget(form.submit, {'label': 'pages.user.profile_create.button'}) }}
				</div>
				{{ form_end(form) }}
			</section>
		</div>
	</div>
{% endblock %}
