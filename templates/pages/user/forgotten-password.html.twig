{% extends 'base.html.twig' %}

{% block body %}
	<form method="post">
		<h1>{{ 'pages.user.forgotten_password.title'|trans }}</h1>

		<div class="form-row form-row__field">
			<label for="password-form-email">{{ 'forms.email.label'|trans }}</label>
			<input id="password-form-email" type="email" name="email" placeholder="{{ 'forms.email.placeholder'|trans }}" required autofocus>
		</div>

		<div class="form-row form-row__submit">
			<button type="submit">{{ 'pages.user.forgotten_password.button'|trans }}</button>
		</div>
	</form>
{% endblock %}
