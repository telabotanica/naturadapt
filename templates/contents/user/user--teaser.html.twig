<a href="{{ path('member', {'user_id':user.id}) }}" class="user user__teaser" style="--color: {{ user.displayName|color }}">
	{% if (admin is defined) and admin %}
		<div class="user--admin"><span>{{ 'pages.user.is_admin'|trans }}</span></div>
	{% endif %}

	{% include 'contents/user/partials/user--avatar.html.twig' with{'user':user} %}

	<div class="user--infos">
		<div class="user--name">{{ user.displayName }}</div>
		{% if user.presentation is not empty %}
			<div class="user--presentation">{{ user.presentation }}</div>
		{% endif %}
	</div>
</a>
